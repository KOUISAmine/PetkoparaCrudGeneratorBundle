{{ "{% extends '"~  base_template  ~ "' %}" }}

{{ "{% block title %}" }}
{{ "{{ parent() }}" }} -  Edit {{ entity_singularized }}
{{ "{% endblock %}" }}

{{ "{% block body %}" }}

<div id="top" class="row">
    <div class="page-header">
        <h2>Edit {{ entity_singularized }} <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
    </div>
</div>

<div class="row">

    {{ '{% if form_errors(edit_form) %}' }}
    <div class="alert alert-block alert-error fade in form-errors">
        {{ '{{ form_errors(edit_form) }}' }}
    </div>
    {{ '{% endif %}' }}

    {{ "{% for flash_message in app.session.flashbag.get('error') %}" }}
    <div class="alert alert-error ">
        {{ ' {{ flash_message }}' }}
    </div>
    {{ '{% endfor %}' }}
    {{ "{% for flash_message in app.session.flashbag.get('success') %}" }}
    <div class="alert alert-success ">
        {{ ' {{ flash_message }}' }}
    </div>
    {{ ' {% endfor %}' }}


    {{ "{{ form_start(edit_form) }}" }}

    {{ "{{ form_widget(edit_form) }}" }}
    <p>
        <button type="submit" class="btn btn-primary">
           <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Submit
        </button>
    </p>
    {{ "{{ form_end(edit_form) }}" }}

    <hr/>

    {% set hide_edit, hide_delete, hide_new = true, false, false %}
    {% include 'crud/views/others/record_actions.html.twig.twig' %}
</div>


{{ "{% endblock %}" }}

